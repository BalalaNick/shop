<%- include('../include/navigationbar.ejs') %>

<link rel="stylesheet" href="/css/index.css">
<div class="shop-continer">

    <% if ( prods.length > 0 ) { %>
        <!-- <ul> -->
            <% prods.forEach((product) => { %>
                <div class="continers">
                   <span id="h1"><%= product.title %></span>
                   <img src="/<%= product.imageurl %>" alt="watch">
                   <span id="h2">$<%= product.price %></span>
                   <div class="buttondiv">
                   <a class="btn btn-success" href="/admin/edit-product/<%= product._id %>?edit=true">Edit</a>
                   <form action="/admin/delete-product" method="post">
                    <button class="btn btn-danger" type="submit">Delete</button>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="productID" value="<%= product._id %>">
                   </form>
                </div>
            </div>
            <% }) %>
        <!-- </ul> -->
    <% } else { %>
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    <% } %>
</div>

