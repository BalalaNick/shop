<%- include('../include/navigationbar.ejs') %>
<link rel="stylesheet" href="/css/index.css">

<% if ( prods.length > 0 ) { %>
<div class="shop-continer">
    <% prods.forEach((product) => { %>
    <div class="continers">
        <span id="h1"><%= product.title %></span>
        <img src="/<%= product.imageurl %>"alt="product">
        <span id="h2">$<%= product.price %></span>
        <div class="buttondiv">
            <%- include('../include/add-to-cart.ejs',{ product:product }) %>
        </div>
    </div>
    <% }) %>
</div>
<%- include('../include/pagination.ejs',{currentpage:currentpage,Nextpage:Nextpage,Prepage:Prepage,hasNextpage:hasNextpage,hasPrepage:hasPrepage,Lastpage:Lastpage}) %>
<% } else { %>
    <div class="spinner-border text-primary" style="margin-top: 100px;margin-left: 50%;" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
<% } %>


<%- include('../include/bottm.ejs') %>