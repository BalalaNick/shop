<%- include('../include/navigationbar.ejs') %>

<link rel="stylesheet" href="/css/login.css">

<% if (ereMessage) { %>
    <h2 id="user-validation">
        <%= ereMessage %>
    </h2>
<% } %>

<div class="container mt-5 d-flex justify-content-around">
    <form class="col-6 col-sm-6 col-md-6 col-lg-3 shadow rounded-1" action="/login" method="post">
      <div class="container-fluid bg-dark p-2 text-center">
        <span class="fs-5 fw-bolder text-primary">Login</span>
      </div>
      <div class="p-2">
        <label for="email">Email:</label>
        <input type="email" class="form-control form-control-sm border border-dark <%= validationErrors.find(e => e.path === 'email') ? 'invalid' : '' %>" id="email" placeholder="Enter email" name="email" value="<%= oldInput.email %>">
      </div>
      <div class="p-2">
        <label for="pwd">Password:</label>
        <input type="password" class="form-control form-control-sm border border-dark <%= validationErrors.find(e => e.path === 'password') ? 'invalid' : '' %>" id="pwd" placeholder="Enter password" name="password" value="<%= oldInput.password %>">
      </div>
      <div class="pb-1 text-center">
        <a href="/reset">Reset Password</a>
      </div>
      <div class="pt-1 p-3 text-center">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" class="btn btn-primary">Login</button>
      </div>
    </form>
  </div>
<%- include('../include/bottm.ejs') %>